/// The system-level configuration file.
/// Do not edit this file, use user-level configuration file and argument configrations to override options.

{
    "ProjectName": "HearthStone",
    "Version": [0, 8, 5],

    // Locale, default is `locale.getdefaultlocale()`.
    "Locale": null,

    // The locale to use when "Locale" does not exists.
    "DefaultLocale": "zh_CN",

    "Frontend": "text-single",

    /// User extension
    "EnableUserExtension": true,

    // User extension path list, should be overwrite in user config file.
    "UserExtensionPaths": [],

    "Logging": {
        "Level": "INFO",
        "ScreenLog": false,
        "Width": 80
    },

    "Game": {
        // HearthStone version
        "Version": [9, 1, 0],

        // Some constants of deck.
        "DeckSize": 30,
        "SameCardMax": [2, 2, 2, 2, 1],

        // Some constants of game.
        "DeckMax": 60,
        "HandMax": 10,
        "PlayMax": 7,
        "SecretMax": 5,
        "ManaMax": 10,

        // If turn number larger than TurnMax, it will be a draw.
        "TurnMax": 89,

        // Start hand card number.
        "StartCardOffensive": 3,
        "StartCardDefensive": 4
    },

    "UI": {
        "Cocos": {
            // Window width and height.
            "WindowSize": [1280, 700]
        }
    }
}
